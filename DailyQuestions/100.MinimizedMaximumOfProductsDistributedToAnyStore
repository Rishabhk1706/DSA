https://leetcode.com/problems/minimized-maximum-of-products-distributed-to-any-store/description/ 08-11-25

class Solution {
    public static boolean possible(int mid, int[] quantities,int n){
        int c=0;
        for(int i : quantities){
            if(i%mid!=0){
                c++;
            }
            c+=(i/mid);
        }
        if(c>n) return false;
        return true;
    }
    public int minimizedMaximum(int n, int[] quantities){
        int high = 0;
        long total = 0;
        for(int i : quantities){
            high = Math.max(high,i);
            total+=i;
        }
        if(n>=total) return 1;
        int low=1;
        int ans=1;
        while(low<=high){
            int mid = low + (high-low)/2;
            if(possible(mid,quantities,n)){
                high=mid-1;
                ans = mid;
            }
            else{
                low=mid+1;
            }
        }
        return ans;
    }
}