https://leetcode.com/problems/minimum-deletions-to-make-string-balanced 07-02-26

class Solution {
    public int minimumDeletions(String s) {
        int ans=0,b=0;
        for(char ch : s.toCharArray()){
            if(ch=='b'){
                b++;
            }
            else if(b>0){
                ans++;
                b--;
            }
        }
        return ans;
    }
}