https://leetcode.com/contest/biweekly-contest-164/problems/find-the-least-frequent-digit/description/ 30-08-25

class Solution {
    public int getLeastFrequentDigit(int n) {
        int[] freq = new int[10];
        while(n>0){
            int d=n%10;
            n=n/10;
            freq[d]++;
        }
        int c=Integer.MAX_VALUE;
        int num=-1;
        for(int i=0;i<10;i++){
            if(freq[i]>0){
                if(freq[i]<c){
                    c=freq[i];
                    num=i;
                }
            }
        }
        return num;
    }
}