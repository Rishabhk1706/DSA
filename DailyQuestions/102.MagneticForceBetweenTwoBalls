https://leetcode.com/problems/magnetic-force-between-two-balls 10-11-25

class Solution {
    public static boolean possible(int mid,int[] position, int m){
        int c=1;
        int last=position[0];
        for(int i=1;i<position.length;i++){
            if(position[i]-last >= mid){
                c++;
                last = position[i];
            }
        }
        return c>=m;
    }
    public int maxDistance(int[] position, int m) {
        Arrays.sort(position);
        int n = position.length;
        int low=1;
        int high=position[n-1]-position[0];
        while(low<=high){
            int mid = low + (high-low)/2;
            if(possible(mid,position,m)){
                low=mid+1;
            }
            else{
                high=mid-1;
            }
        }
        return high;
    }
}