https://leetcode.com/problems/maximum-balanced-shipments/ (3638) 18-08-25

class Solution {
    public int maxBalancedShipments(int[] weight) {
        int c=0;
        int maxi=0;
        for(int i=0;i<weight.length;i++){
            maxi = Math.max(maxi,weight[i]);
            if(i>0 && weight[i]<maxi){
                c++;
                maxi=0;
            }
        }
        return c;
    }
}