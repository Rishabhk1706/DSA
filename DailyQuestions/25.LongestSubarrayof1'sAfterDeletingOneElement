https://leetcode.com/problems/longest-subarray-of-1s-after-deleting-one-element (1493) 25-08-25

class Solution {
    public int longestSubarray(int[] nums) {
        int maxi=0;
        int l=0,r=0,n=nums.length;
        int prev=-1;
        while(r<n){
            if(nums[r]==0){
                if(prev==-1){
                    prev=r;
                    r++;
                }
                else{
                    maxi=Math.max(maxi,r-l-1);
                    l=prev+1;
                    prev=-1;
                }
            }
            else{
                r++;
            }
        }
        return Math.max(maxi,r-l-1);
    }
}