https://leetcode.com/problems/find-the-sequence-of-strings-appeared-on-the-screen/ (3324) 31-07-25

class Solution {
    public List<String> stringSequence(String target) {
        List<String> res = new ArrayList<>();
        StringBuilder sb = new StringBuilder();
        int i=0;
        while(i!=target.length()){
            sb.append('a');
            res.add(sb.toString());
            while(sb.charAt(i)!=target.charAt(i)){
                int code = sb.charAt(i)+1;
                if(code==123) code=97;
                sb.setLength(sb.length()-1);
                sb.append((char) code);
                res.add(sb.toString());
            }
            i++;
        }
        return res;
    }
}