https://leetcode.com/problems/check-if-all-1s-are-at-least-length-k-places-away  17-11-25

class Solution {
    public boolean kLengthApart(int[] nums, int k) {
        int ind=-1;
        for(int i=0;i<nums.length;i++){
            if(nums[i]==1){
                if(ind==-1){
                    ind = i;
                }
                else if(i-ind-1 < k){
                    return false;
                }
                ind=i;
            }
        }
        return true;
    }
}