https://leetcode.com/problems/the-latest-time-to-catch-a-bus/ 26-01-26

class Solution {
    public int latestTimeCatchTheBus(int[] buses, int[] passengers, int capacity) {
        Arrays.sort(passengers);
        Arrays.sort(buses);
        int time=0;
        Set<Integer> set = new HashSet<>();
        int j=0;
        for(int i=0;i<buses.length;i++){
            int count=0;
            while(j<passengers.length && count<capacity && passengers[j]<=buses[i]){
                if(!set.contains(passengers[j]-1)){
                    time = passengers[j]-1;
                }
                set.add(passengers[j]);
                count++;
                j++;
            }
            if(count<capacity && !set.contains(buses[i])){
                time = buses[i];
            }
        }
        return time;
    }
}