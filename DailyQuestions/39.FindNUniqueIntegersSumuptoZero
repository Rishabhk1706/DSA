https://leetcode.com/problems/find-n-unique-integers-sum-up-to-zero 07-09-25

class Solution {
    public int[] sumZero(int n) {
        int[] arr = new int[n];
        if(n%2==0){
            int val = -n/2;
            for(int i=0;i<n;i++){
                if(val==0) val++;
                arr[i] = val;
                val++;
            }
        }
        else{
            int val = -((n-1)/2);
            for(int i=0;i<n;i++){
                arr[i] = val;
                val++;
            }
        }
        return arr;
    }
}