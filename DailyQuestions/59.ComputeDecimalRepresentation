https://leetcode.com/problems/compute-decimal-representation/description/ 28-09-25

class Solution {
    public int[] decimalRepresentation(int n) {
        List<Integer> c  = new ArrayList<Integer>();
        String str = String.valueOf(n);
        for(int i=0;i<str.length();i++){
            char charac = str.charAt(i);
            if(charac != '0'){
                int ans = (charac-'0') * (int) Math.pow(10,str.length()-i-1);
                c.add(ans);
            }
        }
        int[] ans = new int[c.size()];
        for(int i=0;i<c.size();i++){
            ans[i] = c.get(i);
        }
        return ans;
    }
}