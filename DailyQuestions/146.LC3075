https://leetcode.com/problems/maximize-happiness-of-selected-children 25-12-25

class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        Arrays.sort(happiness);
        int n = happiness.length;
        long ans=0;
        for(int j=n-1;j>=n-k;j--){
            happiness[j] = Math.max(0,happiness[j]-(n-1-j));
            ans+=happiness[j];
        }
        return ans;
    }
}