https://leetcode.com/problems/maximize-the-confusion-of-an-exam 12-11-25

class Solution {
    public int maxConsecutiveAnswers(String answerKey, int k) {
        int True = 0;
        int False = 0;
        int l=0;
        int maxi=0;
        for(int r=0;r<answerKey.length();r++){
            if(answerKey.charAt(r)=='T') True++;
            else False++;
            int val = Math.max(True,False);
            while(r-l+1 - val > k){
                if(answerKey.charAt(l)=='T') True--;
                else False--;
                l++;
            }
            maxi = Math.max(maxi,r-l+1);
        }
        return maxi;
    }
}