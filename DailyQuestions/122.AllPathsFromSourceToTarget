https://leetcode.com/problems/all-paths-from-source-to-target 01-12-25

class Solution {
    public void helper(int[][] graph, int src,int dest, List<Integer> cur, List<List<Integer>> res){
        if(src==dest){
            res.add(new ArrayList<>(cur));
            return;
        }
        for(int j : graph[src]){
            cur.add(j);
            helper(graph,j,dest,cur,res);
            cur.remove(cur.size()-1);
        }
    }
    public List<List<Integer>> allPathsSourceTarget(int[][] graph) {
        List<List<Integer>> res = new ArrayList<>();
        List<Integer> cur = new ArrayList<>();
        int n = graph.length;
        cur.add(0);
        helper(graph,0,n-1,cur,res);
        return res;
    }
}