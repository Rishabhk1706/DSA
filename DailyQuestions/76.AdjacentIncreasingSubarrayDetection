https://leetcode.com/problems/adjacent-increasing-subarrays-detection-i/description 15-10-25

class Solution {
    public boolean check(int ind,int k, List<Integer> nums){
        for(int i=ind+1;i<ind+k;i++){
            if(nums.get(i)<=nums.get(i-1)){
                return false;
            }
        }
        return true;
    }
    public boolean hasIncreasingSubarrays(List<Integer> nums, int k) {
        for(int i=0;i<=nums.size()-2*k;i++){
            if(check(i,k,nums) && check(i+k,k,nums)){
                return true;
            }
        }
        return false;
    }
}