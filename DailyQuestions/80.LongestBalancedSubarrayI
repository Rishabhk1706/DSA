https://leetcode.com/problems/longest-balanced-subarray-i/ 19-10-25

class Solution {
    public int longestBalanced(int[] nums) {
        int len = 0;
        int n = nums.length;
        for(int i=0;i<n;i++){
            Set<Integer> e = new HashSet<>();
            Set<Integer> o = new HashSet<>();
            for(int j=i;j<n;j++){
                if((nums[j] & 1) == 0){
                    e.add(nums[j]);
                }
                else{
                    o.add(nums[j]);
                }
                if(e.size()==o.size()) len = Math.max(len,j-i+1);
            }
        }
        return len;
    }
}