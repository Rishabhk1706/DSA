https://leetcode.com/problems/maximum-candies-allocated-to-k-children/description/

class Solution {
    public static boolean possible(int mid, int[] candies, long k){
        long c=0;
        for(int i : candies){
            c+=(i/mid);
        }
        if(c<k) return false;
        return true;
    }
    public int maximumCandies(int[] candies, long k) {
        int low = 1;
        int high = 0;
        long total=0;
        for(int i : candies){
            high = Math.max(high,i);
            total+=i;
        }
        if(total<k) return 0;
        int ans = 0;
        while(low<=high){
            int mid = low + (high-low)/2;
            if(possible(mid,candies,k)){
                ans=mid;
                low = mid+1;
            }
            else{
                high = mid-1;
            }
        }
        return ans;
    }
}