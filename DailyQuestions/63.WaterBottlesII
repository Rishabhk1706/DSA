https://leetcode.com/problems/water-bottles-ii 02-10-25

class Solution {
    public int maxBottlesDrunk(int numBottles, int numExchange) {
        int c=numBottles;
        while(numBottles>=numExchange){
            numBottles = numBottles - numExchange;
            c++;
            numBottles += 1;
            numExchange++;
        }
        return c;
    }
}