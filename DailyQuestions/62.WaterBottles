https://leetcode.com/problems/water-bottles 01-10-25

class Solution {
    public int numWaterBottles(int numBottles, int numExchange) {
        int c=numBottles;
        while(numBottles>=numExchange){
            int q = numBottles/numExchange;
            c+=q;
            numBottles = numBottles - (q*numExchange) + q;
        }
        return c;
    }
}