https://leetcode.com/problems/number-of-sub-arrays-of-size-k-and-average-greater-than-or-equal-to-threshold 29-11-25

class Solution {
    public int numOfSubarrays(int[] arr, int k, int threshold) {
        int sum=0;
        int l=0;
        int c=0;
        for(int i=0;i<arr.length;i++){
            sum+=arr[i];
            if(i-l+1<k){
                continue;
            }
            if(sum/k >= threshold) c++;
            sum-=arr[l];
            l++;
        }
        return c;
    }
}