https://leetcode.com/problems/kth-smallest-element-in-a-bst/description/ (230) 24-08-25

class Solution {
    int ans=0;
    int ind=0;
    public void inorder(TreeNode root,int k){
        if(ind>k || root==null) return;
        inorder(root.left,k);
        if(++ind==k){
            ans=root.val;
            return;
        }
        inorder(root.right,k);
    }
    public int kthSmallest(TreeNode root, int k) {
        inorder(root,k);
        return ans;
    }
}