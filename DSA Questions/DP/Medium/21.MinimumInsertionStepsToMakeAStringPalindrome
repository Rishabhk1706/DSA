https://leetcode.com/problems/minimum-insertion-steps-to-make-a-string-palindrome/

class Solution {
    public int minInsertions(String s) {
        int n = s.length();
        int[] dp = new int[n+1];
        for(int i=1;i<=n;i++){
            int prevDiagonal = 0;
            for(int j=1;j<=n;j++){
                int t = dp[j];
                if(s.charAt(i-1)==s.charAt(n-j)){
                    dp[j] = 1 + prevDiagonal;
                }
                else{
                    dp[j] = Math.max(dp[j],dp[j-1]);
                }
                prevDiagonal=t;
            }
        }
        return s.length()-dp[n];
    }
}