https://leetcode.com/problems/delete-operation-for-two-strings/description/

class Solution {
    public int minDistance(String word1, String word2) {
        int n = word1.length();
        int m = word2.length();
        int[] dp = new int[m+1];
        for(int i=1;i<=n;i++){
            int prevDiagonal = 0;
            for(int j=1;j<=m;j++){
                int t = dp[j];
                if(word1.charAt(i-1)==word2.charAt(j-1)){
                    dp[j] = 1 + prevDiagonal;
                }
                else{
                    dp[j] = Math.max(dp[j],dp[j-1]);
                }
                prevDiagonal=t;
            }
        }
        return (word1.length() + word2.length()) - 2*dp[m];
    }
}