https://leetcode.com/problems/sum-of-subarray-minimums/description/

class Solution {
    public int sumSubarrayMins(int[] arr) {
        int n=arr.length;
        int[] prevsm=new int[n];
        int[] nextsm=new int[n];
        ArrayDeque<Integer> st = new ArrayDeque<>();
        for(int i=0;i<n;i++){
            while(!st.isEmpty() && arr[st.peek()]>arr[i]){
                st.pop();
            }
            if(st.isEmpty()){
                prevsm[i]=-1;
            }
            else{
                prevsm[i]=st.peek();
            }
            st.push(i);
        }
        st.clear();
        for(int i=n-1;i>=0;i--){
            while(!st.isEmpty() && arr[st.peek()]>=arr[i]){
                st.pop();
            }
            if(st.isEmpty()){
                nextsm[i]=n;
            }
            else{
                nextsm[i]=st.peek();
            }
            st.push(i);
        }
        int modulo=1000000007;
        long sum=0;
        for(int i=0;i<n;i++){
            long t=(long)(nextsm[i]-i)*(i-prevsm[i])*arr[i]%modulo;
            sum=(sum+t)%modulo;
        }
        return (int) sum;
    }
}