https://leetcode.com/problems/best-time-to-buy-and-sell-stock/description/ (121) 02-08-25 

class Solution {
    public int maxProfit(int[] prices) {
        int maxProfit=0, bestBuy=prices[0];
        for(int i=1;i<prices.length;i++){
            if(prices[i]>bestBuy){
                maxProfit=Math.max(maxProfit,prices[i]-bestBuy);
            }
            else{
                bestBuy=prices[i];
            }
        }
        return maxProfit;
    }
}