https://leetcode.com/problems/longest-substring-without-repeating-characters/description/ (3) 08-08-25

class Solution {
    public int lengthOfLongestSubstring(String s) {
        int[] freq = new int[256];
        int l=0, r=0;
        int maxlen=0;
        while(r<s.length()){
            freq[s.charAt(r)]++;
            while(freq[s.charAt(r)]>1){
                freq[s.charAt(l)]--;
                l++;
            }
            maxlen=Math.max(maxlen,r-l+1);
            r++;
        }
        return maxlen;
    }
}
